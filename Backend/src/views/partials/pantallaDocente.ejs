<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Asignación de Horario</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body class="bg-primary">
    <header class="bg-secondary p-3">
        <div class="d-flex align-items-center">
            <div class="unt">
                <img class="img-fluid" src="/img/insigniaUnt.png" alt="insigniaUnt">
            </div>
            <div class="container-xl">
                <h1 class="fw-bold text-white titulo fs-1">Universidad Nacional de Trujillo</h1>

            </div>
        </div>
    </header>

    <div class="container mt-5">
        <div class="card mb-4 border-light">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <img src="https://placehold.co/400x400" alt="User Placeholder" class="img-fluid rounded-circle">
                    </div>
                    <div class="col-md-9 text-secondary fw-bold">
                        <form>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="nombres" class="form-label">Nombres:</label>

                                    <input type="text" class="form-control" id="nombres" value="<%= nombres%>" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label for="apellidos" class="form-label">Apellidos:</label>
                                    <input type="text" class="form-control" id="apellidos" value="<%= apellidos%>" readonly>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-md-6">
                                    <label for="codigo" class="form-label">Codigo:</label>
                                    <input type="number" class="form-control" id="codigo" value="<%= codigo%>" readonly>
                                </div>
                                <div class="col-md-6">
                                    <label for="correo" class="form-label">Correo:</label>
                                    <input type="text" class="form-control" id="correo" value="<%= correo%>" readonly>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="card border-light">
            <div class="card-header text-center border-light bg-transparent">
                <h4 class="fw-bold">Asignación de Horario</h4>
            </div>
            <div class="card-body border-light bg-transparent">
                <table class="table table-bordered border-secondary">
                    <thead>
                        <tr class="text-center">
                            <th>HORARIO</th>
                            <th>LUNES</th>
                            <th>MARTES</th>
                            <th>MIERCOLES</th>
                            <th>JUEVES</th>
                            <th>VIERNES</th>
                        </tr>
                    </thead>
                    <tbody class="fw-bold text-center">
                        <% let horarios = ["7:00 a 8:00 a.m.", 
                        "8:00 a 9:00 a.m.", 
                        "9:00 a 10:00 a.m.",
                        "10:00 a 11:00 a.m.",
                        "11:00 a 12:00 a.m.",
                        "12:00 a 1:00 p.m.",
                        "1:00 a 2:00 p.m.",
                        "2:00 a 3:00 p.m.",
                        "3:00 a 4:00 p.m.",
                        "4:00 a 5:00 p.m.",
                        "5:00 a 6:00 p.m.",
                        "6:00 a 7:00 p.m.",
                        "7:00 a 8:00 p.m.",
                        "8:00 a 9:00 p.m."]; %> 
                        <% let dias = ["Lunes", "Martes", "Miércoles", "Jueves", "Viernes"]; %>
                
                        <% horarios.forEach((horario, i) => { %>
                            <tr>
                                <td><%= horario %></td>
                                <% dias.forEach((dia, j) => { 
                                    let btnId = `btn-${i}-${j}`; // ID único del botón
                                %>
                                    <td>
                                        <button type="button" class="btn btn-primary seleccionar-btn"
                                            id="<%= btnId %>"
                                            data-horario="<%= horario %>" 
                                            data-dia="<%= dia %>"
                                            data-bs-toggle="modal" data-bs-target="#informacionModal">
                                            Seleccionar
                                        </button>
                                    </td>
                                <% }) %>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


        <!-- Modal -->
        <div class="modal fade" id="informacionModal" tabindex="-1" aria-labelledby="informacionModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content bg-secondary text-white">
                    <div class="modal-header border-0">
                        <h5 class="modal-title fw-bold" id="informacionModalLabel">Información</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body p-4">
                        <form>
                            <div class="mb-4">
                                <label for="aula" class="form-label">Aula</label>
                                <select class="form-select" id="aula">
                                    <option value="info2">Info-2</option>
                                    <option value="info3">Info-3</option>
                                    <option value="info5">Info-5</option>
                                    <option value="laba">Lab-A</option>
                                    <option value="labb">Lab-B</option>
                                    <option value="labc">Lab-C</option>
                                    <option value="pool14">Pool-14</option>
                                    <option value="pool15">Pool-15</option>
                                    <!-- Opciones de aula -->
                                </select>
                            </div>
                            <div class="mb-4">
                                <label for="tipoSesion" class="form-label">Tipo de Sesión</label>
                                <select class="form-select" id="tipoSesion">
                                    <option value="teoria">Teoría</option>
                                    <option value="practica">Práctica</option>
                                    <option value="laboratorio">Laboratorio</option>
                                    <!-- Opciones de tipo de sesión -->
                                </select>
                            </div>
                            <div class="mb-4">
                                <label for="curso" class="form-label">Curso</label>
                                <select class="form-select" id="curso" name="curso">
                                    <% cursos.forEach((curso, index) => { %>
                                        <option value="<%= index + 1 %>"><%= curso.nombre %></option>
                                    <% }); %>
                                </select>
                            </div>
                            
                            
                        </form>
                    </div>
                    <div class="modal-footer justify-content-center border-0">
                        <button type="button" class="btn btn-light rounded-pill px-5" data-bs-dismiss="modal">Guardar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
    <script src="../js/bootstrap.bundle.min.js" ></script>
</body>
</html>
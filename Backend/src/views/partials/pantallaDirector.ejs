<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de Usuario</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
    <style>
        body {
            background-color: white;
            font-family: Arial, sans-serif;
        }
        .header {
            padding: 20px;
            display: flex;
            align-items: center;
        }
        .header img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            margin-right: 20px;
        }
        .header h2, .header p {
            color: #4a2c7e;
            margin: 0;
        }
        .header h2 {
            font-size: 24px;
        }
        .header p {
            font-size: 18px;
        }
        .form-section {
            padding: 20px;
            display: flex;
            justify-content: space-around;
            align-items: center;
        }
        .form-group {
            text-align: center;
            color: white;
        }
        .form-control {
            width: 200px;
        }
        .form-label {
            margin-bottom: 5px;
        }
        .user-list {
            margin-top: 50px;
            background-color: white;
            padding: 20px;
        }
        .user-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .user-item img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 20px;
        }
        .user-item .info {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 20px;
        }
        .user-item .info span {
            text-align: left;
        }
    </style>
</head>
<body class="">
    <section class="bg-primary">
        <div class="container-xl">
            <div class="row header">
                <div class="col-auto">
                    <img src="<%=url_imagen%>" alt="User Placeholder" class="rounded-circle">
                </div>
                <div class="col">
                    <h2 class="fw-bold"><%= nombres2 %></h2>
                    <p class="fw-bold"><%= correo %></p>
                </div>
            </div>
        </div>
    </section>
    

    <div class="container">
        <h2 class="text-center my-4 fw-bold text-secondary fs-1">Lista de Docentes</h2>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th class="p-3">Foto</th>
                        <th class="p-3">Nombres</th>
                        <th class="p-3">Apellidos</th>
                        <th class="p-3">Código</th>
                        <th class="p-3">Correo</th>
                        <th class="p-3">Grado</th>
                        <th class="p-3">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof docentes !== 'undefined' && Array.isArray(docentes) && docentes.length > 0) { %>
                        <% for(let a = 0; a < docentes.length; a++) { %>
                            <tr class="text-center">
                                <td class="text-center">
                                    <img src="<%= docentes[a].usuario.url_imagen %>" alt="User Placeholder" class="rounded-circle w-25" >
                                </td>
                                <td><%= docentes[a].usuario.nombres %></td>
                                <td><%= docentes[a].usuario.apellidos %></td>
                                <td><%= docentes[a].usuario.codigo %></td>
                                <td><%= docentes[a].usuario.correo %></td>
                                <td><%= docentes[a].grado %></td>
                                <td class="text-center">
                                    <a href="/api/docente/<%= docentes[a].id_docente %>" class="btn btn-primary btn-sm">Ver Horario</a>
                                </td>                           
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No hay docentes disponibles.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    
        <div class="container mt-5">
            <div class="form-section bg-primary">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="profesor" class="form-label">Profesor:</label>
                            <select class="form-control" id="profesor">
                                <option value="">Value</option>
                                <!-- Opciones de profesor -->
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="horarioFin" class="form-label">Horario-Fin:</label>
                            <input type="text" class="form-control" id="horarioFin" placeholder="Value">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="tipoSesion" class="form-label">Tipo de Sesión:</label>
                            <select class="form-control" id="tipoSesion">
                                <option value="">Value</option>
                                <!-- Opciones de tipo de sesión -->
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="curso" class="form-label">Curso:</label>
                            <select class="form-control" id="curso">
                                <option value="">Value</option>
                                <!-- Opciones de curso -->
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="dia" class="form-label">Día:</label>
                            <select class="form-control" id="dia">
                                <option value="">Value</option>
                                <!-- Opciones de día -->
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center mt-4">
                    <div class="col-auto">
                        <button type="button" class="btn btn-primary px-5 py-2">Guardar Cambios</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>
</body>
</html>